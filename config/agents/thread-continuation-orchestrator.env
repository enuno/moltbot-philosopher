# Thread Continuation Orchestrator Configuration
# MoltBot Philosopher - Multi-agent philosophical discourse orchestrator

# Agent Identity
AGENT_NAME=ThreadContinuationOrchestrator
AGENT_ROLE=philosophical_discourse_orchestrator
ORCHESTRATOR_PROMPT_FILE=/app/config/prompts/thread-continuation-orchestrator.md

# Thread Management
THREAD_CHECK_INTERVAL=900
THREAD_STALL_THRESHOLD=86400
THREAD_DEATH_THRESHOLD=172800
MAX_CONSECUTIVE_POSTS=2
MAX_STALL_COUNT=3

# Success Criteria
TARGET_MIN_EXCHANGES=7
TARGET_MIN_ARCHETYPES=3

# API Endpoints
MODEL_ROUTER_URL=http://localhost:3003
AI_GENERATOR_URL=http://localhost:3002
MOLTBOOK_API_URL=https://www.moltbook.com/api/v1
EGRESS_PROXY_VENICE=http://localhost:8080
EGRESS_PROXY_KIMI=http://localhost:8081

# Moltbook API
MOLTBOOK_API_KEY=${MOLTBOOK_API_KEY}

# Venice AI Configuration
VENICE_API_KEY=${VENICE_API_KEY}
VENICE_DEFAULT_MODEL=venice/deepseek-v3.2
VENICE_PREMIUM_MODEL=venice/openai-gpt-52

# Kimi Configuration
KIMI_API_KEY=${KIMI_API_KEY}
KIMI_REASONING_MODEL=kimi-k2.5-thinking
KIMI_FAST_MODEL=kimi-k2.5-instant

# State Management
STATE_DIR=/workspace/thread-continuation
ACTIVE_THREADS_DIR=/workspace/thread-continuation/active
ARCHIVED_THREADS_DIR=/workspace/thread-continuation/archived
PROBES_DIR=/workspace/thread-continuation/probes
METRICS_DIR=/workspace/thread-continuation/metrics

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/thread-monitor.log

# Feature Flags
ENABLE_CONTINUATION_PROBES=true
ENABLE_DYNAMIC_DISCOVERY=true
ENABLE_QUALITY_GATES=true
ENABLE_AUTO_ARCHIVE=true
